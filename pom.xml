<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
		 xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
		 xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>

	<!-- Add Spring repositories -->
	<!-- (you don't need this if you are using a .RELEASE version) -->
	<repositories>
		<repository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/snapshot</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>spring-milestones</id>
			<url>http://repo.spring.io/milestone</url>
		</repository>
	</repositories>
	<pluginRepositories>
		<pluginRepository>
			<id>spring-snapshots</id>
			<url>http://repo.spring.io/snapshot</url>
		</pluginRepository>
		<pluginRepository>
			<id>spring-milestones</id>
			<url>http://repo.spring.io/milestone</url>
		</pluginRepository>
	</pluginRepositories>

	<properties>
		<!-- 文件拷贝时的编码 -->
		<project.reporting.outputEncoding>UTF-8</project.reporting.outputEncoding>

		<!-- 编译时的编码 -->
		<maven.compiler.encoding>UTF-8</maven.compiler.encoding>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<java.version>1.8</java.version>

		<!-- spring.io版本 -->
		<spring.io.version>Brussels-SR6</spring.io.version>
		<spring.boot.parent.version>2.0.0.M7</spring.boot.parent.version>
	</properties>

	<!-- Inherit defaults from Spring Boot -->
	<parent>
		<groupId>org.springframework.boot</groupId>
		<artifactId>spring-boot-starter-parent</artifactId>
		<version>2.0.0.M7</version>
	</parent>

	<!-- 父类 -->
	<groupId>xie.playdatacollect</groupId>
	<artifactId>playdatacollect-parent</artifactId>
	<version>1.0-SNAPSHOT</version>
	<packaging>pom</packaging>

	<modules>
		<module>testAndStudy</module>
		<module>base</module>
		<module>config</module>
		<module>core</module>
		<module>commons</module>
		<module>spider</module>
		<module>playdatacollect-server</module>
		<module>playdatacollect-monitor</module>
		<module>playdatacollect-collector</module>

		<module>dummy</module>
	</modules>

	<dependencyManagement>
		<dependencies>
			<!--
			<dependency>
				<groupId>io.spring.platform</groupId>
				<artifactId>platform-bom</artifactId>
				<version>Brussels-SR6</version>
				<type>pom</type>
				<scope>import</scope>
			</dependency>
			-->

			<!-- 自己工程的依赖 -->
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-base-db</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-base-spring</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-core-db</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-core-spring</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-testandstudy</artifactId>
				<version>${project.version}</version>
			</dependency>
			<dependency>
				<groupId>xie.playdatacollect</groupId>
				<artifactId>playdatacollect-spider-webmagic</artifactId>
				<version>${project.version}</version>
			</dependency>


			<!-- 自己基础项目的依赖 -->
			<dependency>
				<groupId>xie</groupId>
				<artifactId>xcommon</artifactId>
				<version>2.0-SNAPSHOT</version>
			</dependency>


			<!-- 第三方基础依赖 -->
			<dependency>
				<groupId>commons-io</groupId>
				<artifactId>commons-io</artifactId>
				<version>2.6</version>
			</dependency>
			<dependency>
				<!-- html解析 -->
				<groupId>org.jsoup</groupId>
				<artifactId>jsoup</artifactId>
				<version>1.10.2</version>
			</dependency>
			<dependency>
				<!-- deep copy 深度对象复制 -->
				<groupId>net.sf.dozer</groupId>
				<artifactId>dozer</artifactId>
				<version>5.5.1</version>
			</dependency>


			<!-- 爬虫框架依赖 -->
			<dependency>
				<groupId>us.codecraft</groupId>
				<artifactId>webmagic-core</artifactId>
				<version>0.7.3</version>
			</dependency>
			<dependency>
				<groupId>us.codecraft</groupId>
				<artifactId>webmagic-extension</artifactId>
				<version>0.7.3</version>
			</dependency>
		</dependencies>
	</dependencyManagement>

	<dependencies>
		<!-- 自己基础项目的依赖 -->
		<dependency>
			<groupId>xie</groupId>
			<artifactId>xcommon</artifactId>
		</dependency>
	</dependencies>

	<build>
		<plugins>
			<!-- 定义使用jdk编译版本 UTF-8编译 -->
			<plugin>
				<artifactId>maven-compiler-plugin</artifactId>
				<configuration>
					<source>${java.version}</source>
					<target>${java.version}</target>
					<encoding>${project.build.sourceEncoding}</encoding>
				</configuration>
			</plugin>

			<!-- Generate Git Information -->
			<plugin>
				<groupId>pl.project13.maven</groupId>
				<artifactId>git-commit-id-plugin</artifactId>
			</plugin>
		</plugins>
	</build>
</project>